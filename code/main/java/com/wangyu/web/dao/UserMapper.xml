<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wangyu.web.dao.UserMapper">
    <resultMap id="user_result" type="User">
            <result property="id" column="id"/>
            <result property="userName" column="user_name"/>
            <result property="password" column="password"/>
            <result property="trueName" column="true_name"/>
            <result property="creator" column="creator"/>
            <result property="modifier" column="modifier"/>
            <result property="createDate" column="create_date"/>
            <result property="modifyDate" column="modify_date"/>
            <result property="delFlag" column="del_flag"/>
        </resultMap>

    <sql id="user_column">
            sys_user.id,
            sys_user.user_name,
            sys_user.password,
            sys_user.true_name,
            sys_user.creator,
            sys_user.modifier,
            sys_user.create_date,
            sys_user.modify_date,
            sys_user.del_flag
        </sql>

    <sql id="user_query_param">
        <trim prefix="WHERE" prefixOverrides="AND|OR">
                    <if test="id!=null">
				AND sys_user.id = #{id}
			</if>
                    <if test="ids!=null">
				AND sys_user.id IN
				<foreach collection="ids" item="id" open="(" close=")" separator=",">
					#{id}
				</foreach>
			</if>
                    <if test="userName!=null and ''!=userName">
				AND sys_user.user_name = #{userName}
			</if>
                    <if test="password!=null and ''!=password">
				AND sys_user.password = #{password}
			</if>
                    <if test="trueName!=null and ''!=trueName">
				AND sys_user.true_name = #{trueName}
			</if>
                    <if test="creator!=null">
				AND sys_user.creator = #{creator}
			</if>
                    <if test="modifier!=null">
				AND sys_user.modifier = #{modifier}
			</if>
                    <if test="createDate!=null and ''!=createDate">
				AND sys_user.create_date &gt;= #{dynamicFileds_createDate}
			</if>
                    <if test="createDate!=null and ''!=createDate">
				AND sys_user.create_date &lt; #{dynamicFileds_createDate}
			</if>
                    <if test="modifyDate!=null and ''!=modifyDate">
				AND sys_user.modify_date &gt;= #{dynamicFileds_modifyDate}
			</if>
                    <if test="modifyDate!=null and ''!=modifyDate">
				AND sys_user.modify_date &lt; #{dynamicFileds_modifyDate}
			</if>
                    <if test="delFlag!=null">
				AND sys_user.del_flag = #{delFlag}
			</if>
                </trim>
    </sql>

    <!-- 根据编号查询 -->
    <select id="get" resultType="User">
        SELECT
        <include refid="user_column" />
        FROM sys_user
        WHERE sys_user.id = #{id}
    </select>

    <!-- 插入-->
    <insert id="insert">
        INSERT INTO sys_user
        <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="userName!=null and ''!=userName">
				user_name,
			</if>
                <if test="password!=null and ''!=password">
				password,
			</if>
                <if test="trueName!=null and ''!=trueName">
				true_name,
			</if>
                <if test="creator!=null">
				creator,
			</if>
                <if test="modifier!=null">
				modifier,
			</if>
                <if test="createDate!=null and ''!=createDate">
				create_date,
			</if>
                <if test="modifyDate!=null and ''!=modifyDate">
				modify_date,
			</if>
                <if test="delFlag!=null">
				del_flag,
			</if>
                </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                    <if test="userName!=null and ''!=userName">
				#{userName},
			</if>
                    <if test="password!=null and ''!=password">
				#{password},
			</if>
                    <if test="trueName!=null and ''!=trueName">
				#{trueName},
			</if>
                    <if test="creator!=null">
				#{creator},
			</if>
                    <if test="modifier!=null">
				#{modifier},
			</if>
                    <if test="createDate!=null and ''!=createDate">
				#{createDate},
			</if>
                    <if test="modifyDate!=null and ''!=modifyDate">
				#{modifyDate},
			</if>
                    <if test="delFlag!=null">
				#{delFlag},
			</if>
                </trim>
    </insert>

    <!-- 修改 -->
    <update id="update">
        UPDATE sys_user
        <trim prefix="SET" suffixOverrides=",">
                    <if test="userName!=null and ''!=userName">
				sys_user.user_name = #{userName},
			</if>
                    <if test="password!=null and ''!=password">
				sys_user.password = #{password},
			</if>
                    <if test="trueName!=null and ''!=trueName">
				sys_user.true_name = #{trueName},
			</if>
                    <if test="creator!=null">
				sys_user.creator = #{creator},
			</if>
                    <if test="modifier!=null">
				sys_user.modifier = #{modifier},
			</if>
                    <if test="createDate!=null and ''!=createDate">
				sys_user.create_date = #{createDate},
			</if>
                    <if test="modifyDate!=null and ''!=modifyDate">
				sys_user.modify_date = #{modifyDate},
			</if>
                    <if test="delFlag!=null">
				sys_user.del_flag = #{delFlag},
			</if>
                </trim>
        WHERE sys_user.id = #{id}
    </update>

    <!-- 删除-->
    <delete id="delete">
        DELETE FROM sys_user WHERE id = #{id}
    </delete>

    <!-- 批量删除-->
    <delete id="batchDelete">
        DELETE FROM sys_user
        WHERE id IN
        <foreach collection="array" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

    <!-- 查询列表-->
    <select id="findList" resultType="User" parameterType="java.util.HashMap">
        SELECT
        <include refid="user_column" />
        FROM sys_user
        <include refid="user_query_param" />
    </select>


    <!-- 根据给定的ids查询列表-->
    <select id="findByIds" resultType="User">
        SELECT
        <include refid="user_column" />
        FROM sys_user
        WHERE id IN
        <foreach collection="array" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </select>

    <!-- 查询单个实例-->
    <select id="findOne" resultType="User" parameterType="java.util.HashMap">
        SELECT
        <include refid="user_column" />
        FROM sys_user
        <include refid="user_query_param" />
    </select>

    <!-- 统计个数-->
    <select id="countNums" resultType="long" parameterType="java.util.HashMap">
        SELECT count(1)
        FROM sys_user
        <include refid="user_query_param" />
    </select>

</mapper>